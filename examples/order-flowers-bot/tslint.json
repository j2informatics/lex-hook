{
    "extends": ["tslint:recommended", "tslint-config-prettier"],
    "rules": {
        "max-line-length": {
            "options": [120]
        },
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "no-console": {
            "severity": "warning",
            "options": ["time", "timeEnd", "trace"]
        },
        "max-classes-per-file": [true, 10],
        "no-namespace": false
    }
}